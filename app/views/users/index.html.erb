<!--登録したアカウント一覧ページ-->

<div class="container">
  <div class="row">
    <div class="col-xs-3">
       <!--ユーザー情報部分-->
       <%= render "user", user: @user %>
       <!--フォーム部分-->
       <%= render "books/form", book: @book %>
    </div>

    <div class="col-xs-9">
     <h1>Users</h1>
      <table class="table">
        <!--登録したアカウントの一覧部分-->
          <thead>
            <tr>
              <th>画像</th>
              <th>名前</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size: '60x60' %></td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user.id), class: "btn btn-info active" %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>