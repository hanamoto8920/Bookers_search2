<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>検索結果</h1>
      <table class="table">
        <% if "book_title" == @select_model %>
        <thead>
          <tr>
          <th>画像</th>
          <th>タイトル</th>
          <th>内容</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size: '60x60' %>
            </td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
        <% else %>
        <thead>
          <tr>
          <th>画像</th>
          <th>名前</th>
          <th>自己紹介</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size: '60x60' %>
            </td>
            <td><%= user.name %></td>
            <td><%= user.introduction %></td>
          </tr>
          <% end %>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>