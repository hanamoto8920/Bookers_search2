<!--編集画面-->

<div class="notice">
  <%= notice %>
</div>

<!--エラー文章部分-->
<div class="error">
<% if @book.errors.any? %>
    <h2><%= @book.errors.count %>error</h2>
    <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>
</div>

<h1>Editing Book</h1>
<%= form_with model:@book, url: book_path(@book.id), local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Update Book', class:"btn btn-info active" %>
    <%= link_to "Show", book_path(@book.id), class: "btn btn-info active" %>
    <%= link_to "Back", books_path,  class: "btn btn-info active" %>
<% end %>