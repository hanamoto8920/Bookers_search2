<!--詳細ページ-->
<!--エラー部分-->
<%= render "layouts/error", book: @new %>
<div class="container">
    <div class="row">
        <div class="notice">
          <%= notice %>
        </div>
        <div class="col-xs-3">
            <!--ユーザー情報部分-->
            <%= render "users/user", user: @book.user %>
            <!--フォーム部分-->
      　　　　<%= render "form", book: @new %>
        </div>
        <div class="col-xs-9">
            <!--本の詳細部分-->
            <h1>Book detail</h1>
            <table class="table">
                <tbody>
                    <tr>
                        <td>
                            <%= link_to user_path(@book.user.id) do %>
                                <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size: '60x60' %>
                                </br>
                                <%= @book.user.name %>
                            <% end %>
                        </td>
                        <td>
                            <!--タイトル-->
                            <p><%= link_to @book.title, book_path(@book.id) %></p>
                        </td>
                        <td>
                            <!--オピニオン-->
                            <p><%= @book.body %></p>
                        </td>
                    <!--もしログインしてるユーザーと投稿した人が一致していたら表示できる-->
                    <% if @book.user == current_user %>
                        <td>
                         <%= link_to "Edit", edit_book_path(@book.id),  class: "btn btn-info active" %>
                        </td>
                 　  　　<td>
                　        <%= link_to "Destroy", book_path(@book.id), class: "btn btn-default", method: :delete, "data-confirm" => "本当に消しますか？?" %>
                　   　  </td>
                    <% end %>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
